# GDial Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# =============================================================================
# REQUIRED SETTINGS - Application will not start without these
# =============================================================================

# Security (REQUIRED)
# Generate a secure 32+ character secret key
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_32_character_secret_key_here

# Twilio Configuration (REQUIRED)
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# =============================================================================
# OPTIONAL SETTINGS - Have sensible defaults
# =============================================================================

# Environment
ENVIRONMENT=development

# Server Configuration
API_HOST=127.0.0.1
API_PORT=8000
BASE_URL=http://localhost:8000

# Database
DATABASE_URL=sqlite:///./gdial.db

# RabbitMQ (for background tasks)
RABBITMQ_URL=amqp://guest:guest@localhost/

# Call Configuration
CALL_TIMEOUT_SEC=25
SECONDARY_BACKOFF_SEC=60
MAX_SECONDARY_ATTEMPTS=1
SKIP_TWILIO_VALIDATION=false

# OpenAI (optional - for TTS features)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_TTS_MODEL=tts-1
VOICE=alloy

# File Storage
AUDIO_DIR=static/audio

# Logging
LOG_LEVEL=INFO

# CORS (for frontend)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Cleanup Intervals (in minutes)
AUDIO_CACHE_CLEANUP_INTERVAL_MINUTES=60
BURN_MESSAGE_CLEANUP_INTERVAL_MINUTES=15

# =============================================================================
# PRODUCTION ONLY SETTINGS
# =============================================================================
# These are required when ENVIRONMENT=production

# PUBLIC_URL=https://your-domain.com
# DATABASE_URL=postgresql://user:password@localhost/gdial
# RABBITMQ_URL=amqp://user:password@rabbitmq-server/